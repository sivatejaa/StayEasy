<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Preview_Info">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lavender"
        android:gravity="start"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="196dp"
            android:layout_height="56dp"
            android:layout_gravity="left"

            app:srcCompat="@drawable/stayeasycropped" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Preview"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-27dp"
        tools:layout_editor_absoluteY="111dp" />

    <TextView
        android:id="@+id/textViewName1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: "
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="164dp" />

    <TextView
        android:id="@+id/textViewEmail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: "
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="190dp" />

    <TextView
        android:id="@+id/textViewPhone1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone: "
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="227dp" />

    <TextView
        android:id="@+id/textViewAddress1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address: "
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="261dp" />

    <TextView
        android:id="@+id/textViewNumberPeople1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of People:"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="295dp" />

    <TextView
        android:id="@+id/textViewRooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Room Type: "
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="336dp" />

    <TextView
        android:id="@+id/textViewCheckin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkin Date:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="376dp" />

    <TextView
        android:id="@+id/textViewCheckout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkout Date:"
        tools:layout_editor_absoluteX="-28dp"
        tools:layout_editor_absoluteY="412dp" />

    <TextView
        android:id="@+id/textViewNOofRooms1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of Rooms: "
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="447dp" />

    <TextView
        android:id="@+id/textViewPrice1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Price: $100 (Pay at Hotel) "
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="490dp" />

    <Button
        android:id="@+id/buttonSubmit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="542dp" />


</LinearLayout>